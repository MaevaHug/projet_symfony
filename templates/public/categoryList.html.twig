{% extends 'base.html.twig' %}

{% block title %}
	{{ title }}{{title}}
{% endblock %}

{% block body %}
	<h1>{{ title }}</h1>

	<section class="row categories">
		{% for category in categories %}
			<div class="category-container col-lg-4 col-sm-6 col-12">
				<div class="row">
					<a href="{{ path('category_show', {'slug' : category.slug}) }}">{{category.name}}</a>
				</div>
			</div>
		{% endfor %}

	</section>


{% endblock %}
